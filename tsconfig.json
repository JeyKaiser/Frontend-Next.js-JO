{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/styles/*": ["./styles/*"],         // Permite importar 'styles/...' como '@/styles/...'
      "@/types/*": ["./types/*"],           // Permite importar 'types/...' como '@/types/...'
      "@/lib/*": ["./lib/*"],               // Si tienes una carpeta 'lib'
      "@/components/*": ["./components/*"], // Si tienes una carpeta 'components'      
      "@/*": ["../*"]                            // Puedes usar '@/*' para mapear todo src/ si prefieres:
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
