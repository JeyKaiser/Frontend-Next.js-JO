{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["../*"],                      // Puedes usar '@/*' para mapear todo src/ si prefieres:
      "@/styles/*": ["./styles/*"],         // Permite importar 'styles/...' como '@/styles/...'
      "@/types/*": ["./types/*"],           // Permite importar 'types/...' como '@/types/...'      
      "@/components/*": ["./components/*"]  //Si tienes una carpeta 'components'            
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}


